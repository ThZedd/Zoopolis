<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zoopolis"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".RegisterMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".LoginMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".MapMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".AnimalMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />

        <activity
            android:name=".PricesMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".ActivitiesMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".AnimalDescriptionMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".ActivitiesTimeActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
        <activity
            android:name=".ProfileMenuActivity"
            android:exported="true"
            android:theme="@style/Theme.Zoopolis" />
    </application>

</manifest>